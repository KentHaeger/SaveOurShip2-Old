<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_SpaceSuitBody</defName>
    <label>EVA suit</label>
    <description>A suit designed to keep the occupant alive in outer space. Includes small thrusters for movement.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>ShipSpaceSuits</researchPrerequisite>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/EVA/EVA_Lite</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>17000</WorkToMake>
      <MaxHitPoints>340</MaxHitPoints>
      <Mass>10</Mass>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
      <ArmorRating_Heat>0.75</ArmorRating_Heat>
      <Insulation_Cold>100</Insulation_Cold>
      <Insulation_Heat>25</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.25</MoveSpeed>
      <WorkSpeedGlobal>-0.075</WorkSpeedGlobal>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
	<stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
	<costStuffCount>70</costStuffCount>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>10</Plasteel>
    </costList>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
        <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/EVA/EVA_Lite</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
        <li>Spacer</li>
        <li>EVA</li>
      </tags>
      <defaultOutfitTags>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
